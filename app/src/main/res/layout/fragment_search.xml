<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.searchforproduct.SearchFragment">
    <AutoCompleteTextView
        android:id="@+id/autocomplete_fragment"
        android:hint="Enter Item name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10px"
        android:singleLine="true"
        android:background="@drawable/round_cornor"
        android:layout_margin="@dimen/_10px"/>
    <TextView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="100sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="@color/places_ui_default_primary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/autocomplete_fragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_below="@+id/autocomplete_fragment"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"/>
    <ImageView
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/_10px"
        android:layout_margin="5dp"
        android:background="@color/quantum_bluegrey50"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>