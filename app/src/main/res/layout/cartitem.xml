<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/course"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/course_pic"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/course_pic"/>
        <TextView
            android:id="@+id/course_price"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/course_name"/>
        <TextView
            android:id="@+id/packSize"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/course_price"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/packSize"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/course_quantity"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:text="Home"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/addQuantity"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="20px"
                android:layout_marginTop="-5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/course_quantity"/>
            <ImageView
                android:id="@+id/MinusQuantity"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_minimize_24"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-14dp"
                android:padding="20px"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/addQuantity"/>
            <ImageView
                android:id="@+id/Delete"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:padding="20px"
                android:layout_marginTop="-5dp"
                app:layout_constraintStart_toEndOf="@+id/MinusQuantity"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>