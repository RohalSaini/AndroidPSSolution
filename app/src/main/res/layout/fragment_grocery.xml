<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".fragment.GroceryFragment">
    <TextView
        android:visibility="invisible"
        android:id="@+id/pinVerfiy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Check Pin"
        android:padding="20dp"/>

    <include
        android:id="@+id/delivery_layout"
        layout="@layout/delivery" />
    <GridLayout
        android:id="@+id/grid"
        android:layout_below="@+id/delivery_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:rowCount="4"
        android:backgroundTint="@color/primary"
        android:background="@color/primary"
        android:paddingBottom="50dp"

        android:columnCount="2">

        <ImageView
            android:id="@+id/cooking"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/cooking_essentials"/>
        <ImageView
            android:id="@+id/food"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/packages_food"/>
        <ImageView
            android:id="@+id/health"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:src="@drawable/health_and_beauty"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/baby"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:src="@drawable/baby_care"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/men"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:src="@drawable/men_care"
            android:scaleType="fitXY"/>
        <ImageButton
            android:id="@+id/women"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:src="@drawable/women_care"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:src="@drawable/shop_by_brand"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/offero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:src="@drawable/today_offer"
            android:scaleType="fitXY"/>

    </GridLayout>
    <include
        android:id="@+id/layput_toolbar1"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="-10dp"
        android:layout_alignBottom="@+id/grid" />

</RelativeLayout>